# Puerto en producci贸n
server.port=${SERVER_PORT}
app.allowed.domain=${SERVER_HOSTNAME}

# TLS Configuration
server.ssl.enabled=${SERVER_SSL_ENABLED}
server.ssl.key-store=${SERVER_SSL_KEY_STORE}
server.ssl.key-store-type=${SERVER_SSL_KEY_STORE_TYPE}
server.ssl.key-alias=${SERVER_SSL_KEY_ALIAS}
server.ssl.key-store-password=${SSL_KEYSTORE_PASSWORD}
server.ssl.protocol=TLS
server.ssl.enabled-protocols=TLSv1.2,TLSv1.3
server.ssl.ciphers=TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384,TLS_ECDHE_RSA_WITH_AES_128_GCM_SHA256,TLS_ECDHE_RSA_WITH_AES_256_CBC_SHA384,TLS_ECDHE_RSA_WITH_AES_128_CBC_SHA256
# Client Authentication (opcional)
server.ssl.client-auth=none

# Base de datos MariaDB (producci贸n)
spring.datasource.webpage.jdbc-url=${DATABASE_JDBC_URL}
spring.datasource.webpage.username=${DATABASE_USER}
spring.datasource.webpage.password=${DATABASE_PASSWORD}
spring.datasource.webpage.driver-class-name=org.mariadb.jdbc.Driver
spring.datasource.webpage.hibernate.dialect=org.hibernate.dialect.MariaDBDialect
spring.datasource.webpage.hikari.minimum-idle=10
spring.datasource.webpage.hikari.maximum-pool-size=10
spring.datasource.webpage.hikari.connection-timeout=30000
spring.datasource.webpage.hikari.idle-timeout=600000
spring.datasource.webpage.hikari.max-lifetime=1800000
spring.datasource.webpage.hikari.pool-name=MariaDBHikariCP
spring.datasource.webpage.hikari.validation-timeout=5000
spring.datasource.webpage.hikari.connection-test-query=SELECT 1

